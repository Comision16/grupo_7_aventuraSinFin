<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head',{
        title : 'Dashboard'
    }) %>

<body class="home">
    
    <%- include('./partials/header') %>

    <main class="container">
        <div class="row mt-5">
            <div class="col-12 col-md-12  mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Dashboard / Productos</h4>
                    </div>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active " id="nav-home" role="tabpanel"
                    aria-labelledby="nav-home-tab" tabindex="0">
                    <div class="d-flex flex-column gap-2 flex-md-row justify-content-between my-3">
                        <a href="/products/add" class="btn btn-dark"><i class="fas fa-plus"></i>
                            Agregar</a>
                     </div>
                    <div class="card-body">
                        <table class="table table-striped ">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Pais</th>
                                    <th scope="col">Hotel</th>
                                    <th scope="col">Precio</th>
                                    <th scope="col">Descuento</th>
                                    <th scope="col">P. Final por noche</th>
                                    <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% products.forEach(({ id, country, hotel, price, discount }, index) => { %>
                                <tr>
                                    <th scope="row"><%= index + 1 %></th>
                                    <td><%= country %></td>
                                    <td><%= hotel %></td>
                                    <td><%= price %></td>
                                    <td><%= discount %></td>
                                    <td><%= price - (discount * price / 100) %></td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-secondary dropdown-toggle"
                                                    type="button" id="dropdownMenuButton<%= id %>"
                                                    data-bs-toggle="dropdown" aria-expanded="false">
                                                    Opciones
                                                </button>
                                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton<%= id %>">
                                                    <li><a class="dropdown-item"
                                                            href="/products/detail/<%= id %>">Ver producto</a></li>
                                                    <li><a class="dropdown-item"
                                                    
                                                            href="/products/edit/<%= id %>">Editar producto</a></li>
                                                    <li><a class="dropdown-item"
                                                            href="/products/delete/<%= id %>">Eliminar producto</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>

        <%- include('partials/footer') %>
</body>

</html>
