<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head',{ title : 'Crear producto' }) %>

    <body style="
      min-height: 100vh;
      background-color: #f8f9fa;
      display: flex;
      flex-direction: column;
    ">
        <%- include('./partials/header') %>

            <main class="flex-grow-1 d-flex justify-content-center align-items-center" style="
        background-image: url('/images/jong-marshes-79mNMAvSORg-unsplash.jpg');
        background-size: cover;
        background-position: center;
      ">
<!-- Contenedor del formulario -->
<div class="container" style="margin-top: 20px; margin-bottom: 20px">
    <div class="row">
        <div class="col-md-6 col-lg-4 mx-auto">
            <div class="card border rounded">
                <div class="card-header bg-white">
                    <h4 class="card-title">Agregar producto hoteles</h4>
                </div>
                <div class="card-body">
                <form action="" method="POST" enctype="multipart/form-data">
                        <div class="mb-2">
                            <label for="countrie" class="form-label" >Pa√≠ses</label>
                            <select class="form-select <%= locals.errors && (errors.countrie && 'is-invalid') %>" aria-label="Default select example" name="countrieId" id="countrieId">
                                <option selected hidden value="">Seleccione...</option>
                                <% countries.forEach(countrie=> { %>
                                  <option value="<%= countrie.id %>" <%= locals.old && (old.countrie === countrie.id && 'selected' )%> >
                                    <%= countrie.name %>
                                  </option>
                                  <% }) %>
                              </select>
                        </div>

                        <div class="mb-3">
                            <label for="hotel" class="form-label">Nombre del Hotel</label>
                            <input type="text" class="form-control <%= locals.errors ? (errors.hotel ? 'is-invalid' : 'is-valid') : '' %>" id="hotel" name="hotel" value="<%= locals.old && (old.hotel && old.hotel) %>"/>
                            <small id="hotelErrors" class="text-warning fs-6"> <%= locals.errors && (errors.hotel && errors.hotel.msg) %> </small>
                        </div>

                        <div class="d-flex justify-content-between mb-3">
                            <label for="images" class="btn btn-secondary">Agregar imagen</label>
                            <input hidden class="form-control" type="file" id="images"
                                name="images"/>
                            <button class="btn btn-dark" type="submit">
                                Guardar cambios
                            </button>
                        </div>
                        <small class="text-warning fs-6"> <%= locals.errors && (errors.images && errors.images.msg) %> </small>
                    </form>


                </div>
            </div>
        </div>
    </div>
</div>
</main>

            <%- include('partials/footer') %>
            <!-- <script src="/javascripts/validations/validationProductAdd.js"></script> -->
    </body>

</html>