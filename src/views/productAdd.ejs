<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head',{ title : 'Crear producto' }) %>

    <body style="
      min-height: 100vh;
      background-color: #f8f9fa;
      display: flex;
      flex-direction: column;
    ">
        <%- include('./partials/header') %>

            <main class="flex-grow-1 d-flex justify-content-center align-items-center" style="
        background-image: url('/images/jong-marshes-79mNMAvSORg-unsplash.jpg');
        background-size: cover;
        background-position: center;
      ">
<!-- Contenedor del formulario -->
<div class="container" style="margin-top: 20px; margin-bottom: 20px">
    <div class="row">
        <div class="col-md-6 col-lg-4 mx-auto">
            <div class="card border rounded">
                <div class="card-header bg-white">
                    <h4 class="card-title">Agregar producto país</h4>
                </div>
                <div class="card-body">
                    <form action="" method="POST" enctype="multipart/form-data">

                        <div class="mb-3">
                            <label for="price" class="form-label">Nombre</label>
                            <input type="text" class="form-control <%= locals.errors ? (errors.name ? 'is-invalid' : 'is-valid') : '' %>" id="productName" name="name" value="<%= locals.old && (old.name && old.name) %>"/>
                            <small id="nameErrors" class="text-warning fs-6"> <%= locals.errors && (errors.name && errors.name.msg) %> </small>
                        </div>

                        <div class="mb-2">
                            <label for="country" class="form-label" >Países</label>
                            <select class="form-select <%= locals.errors && (errors.country && 'is-invalid') %>" aria-label="Default select example" name="country" id="country">
                                <option selected hidden value="">Seleccione...</option>
                                <% countries.forEach(country=> { %>
                                  <option value="<%= country.id %>" <%= locals.old && (old.country === country.id && 'selected' )%> >
                                    <%= country.name %>
                                  </option>
                                  <% }) %>
                              </select>
                        </div>

                        <div class="mb-2">
                            <label for="countrie" class="form-label" >Hoteles</label>
                            <select class="form-select <%= locals.errors && (errors.countrie && 'is-invalid') %>" aria-label="Default select example" name="hotelId" id="hotelId">
                                <option selected hidden value="">Seleccione...</option>
                                <% hotels.forEach(hotel=> { %>
                                  <option value="<%= hotel.id %>" <%= locals.old && (old.hotel === hotel.id && 'selected' )%> >
                                    <%= hotel.name %>
                                  </option>
                                  <% }) %>
                              </select>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Descripción</label>
                            <textarea class="form-control <%= locals.errors ? (errors.description ? 'is-invalid' : 'is-valid') : '' %>" id="description" style="resize: none" name="description"><%= locals.old && (old.description && old.description) %></textarea>
                            <small id="descriptionErrors" class="text-warning fs-6"> <%= locals.errors && (errors.description && errors.description.msg) %> </small>
                        </div>

                        <div class="mb-3">
                            <label for="price" class="form-label">Precio</label>
                            <input type="number" class="form-control <%= locals.errors ? (errors.price ? 'is-invalid' : 'is-valid') : '' %>" id="productPrice" name="price" min="0" step="0.01" value="<%= locals.old && (old.price && old.price) %>"/>
                            <small id="priceErrors" class="text-warning fs-6"> <%= locals.errors && (errors.price && errors.price.msg) %> </small>
                        </div>

                        <div class="mb-3">
                            <label for="discount" class="form-label">Descuento</label>
                            <input type="number" class="form-control" id="discount"
                                name="discount" min="0" max="100"  />
                        </div>

                        <div class="d-flex justify-content-between mb-3">
                            <label for="images" class="btn btn-secondary">Agregar imagen</label>
                            <input hidden class="form-control" type="file" id="images"
                                name="images"/>
                            <button class="btn btn-dark" type="submit">
                                Guardar cambios
                            </button>
                        </div>
                        <small class="text-warning fs-6"> <%= locals.errors && (errors.images && errors.images.msg) %> </small>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</main>

            <%- include('partials/footer') %>
            <!-- <script src="/javascripts/validations/validationProductAdd.js"></script> -->
    </body>

</html>