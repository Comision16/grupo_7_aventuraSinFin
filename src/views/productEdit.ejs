<body class="login d-flex align-items-center justify-content-center" style="min-height: 100vh; background-color: #f8f9fa;">

    <div class="container">
        <div class="row">
            <div class="col-md-10 col-lg-8 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Editar producto</h4>
                    </div>
                    <div class="card-body">
                        <form action="" method="POST" class="row">
                            <div class="col-md-6 mb-3">
                                <label for="placeName" class="form-label">Lugar</label>
                                <input type="text" class="form-control" id="placeName" name="place" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="hotelName" class="form-label">Hotel</label>
                                <input type="text" class="form-control" id="hotelName" name="hotel" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Vuelos</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="flights" id="flightsYes" value="si" required>
                                    <label class="form-check-label" for="flightsYes">
                                        Sí
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="flights" id="flightsNo" value="no">
                                    <label class="form-check-label" for="flightsNo">
                                        No
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="stopover" class="form-label">Escalas</label>
                                <select class="form-select" id="stopover" name="stopover">
                                    <option value="sin-escala">Sin escala</option>
                                    <option value="con-escala">Con escala</option>
                                </select>
                            </div>
                            <div class="col-12 mb-3">
                                <label for="productDescription" class="form-label">Descripción</label>
                                <textarea class="form-control" id="productDescription" style="resize: none;" name="description" required></textarea>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="productPrice" class="form-label">Precio</label>
                                <input type="number" class="form-control" id="productPrice" name="price" min="0" step="0.01" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="productDiscount" class="form-label">Descuento</label>
                                <input type="number" class="form-control" id="productDiscount" name="discount" min="0" max="100" required>
                            </div>
                            <div class="col-12 d-flex justify-content-end gap-2 mb-3">
                                <label for="productImage" class="btn btn-secondary">Agregar imagen</label>
                                <input hidden class="form-control" type="file" id="productImage">
                                <button class="btn btn-dark" type="submit">Guardar cambios</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>