<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head',{ title : 'Editar producto' }) %>

    <body style="
      min-height: 100vh;
      background-color: #f8f9fa;
      display: flex;
      flex-direction: column;
    ">
        <%- include('./partials/header') %>

    <main class="flex-grow-1 d-flex justify-content-center align-items-center"
        style="background-image: url('/images/jong-marshes-79mNMAvSORg-unsplash.jpg'); background-size: cover; background-position: center;">
        <!-- Contenedor del formulario -->
        <div class="container" style="margin-top: 20px; margin-bottom: 20px;">
            <div class="row">
                <div class="col-md-6 col-lg-4 mx-auto">
                    <div class="card border rounded">
                        <div class="card-header bg-white">
                            <h4 class="card-title">Editar producto hotel</h4>
                        </div>
                        <div class="card-body">

                            <form action="/products/update/<%= id %>?_method=PUT" method="POST" class="row" enctype="multipart/form-data">

                                <div class="mb-3">
                                    <img src="/images/<%= image %>" alt="" class="img-fluid">
                                </div>

                                <div class="mb-3">
                                    <button class="btn btn-secondary" type="button" onclick="document.getElementById('images').click();">Editar imagen</button>
                                    <input type="file" class="form-control" id="images" name="image" style="display: none;">
                                </div>

                                <div class="mb-2">
                                    <label for="hotelId" class="form-label" >Hoteles</label>
                                    <select class="form-select <%= locals.errors && (errors.hotelId && 'is-invalid') %>" aria-label="Default select example" name="hotelId" id="hotelId">
                                        <% hotels.forEach(hotel=> { %>
                                          <option <%= hotel.id === hotelId && 'selected' %> value="<%= hotel.id %>"><%= hotel.name %></option>
                                          <% }) %>
                                      </select>
                                      <small id="nameErrors" class="text-warning fs-6"> <%= locals.errors && (errors.hotelId && errors.hotelId.msg) %> </small>
                                </div>

                                <div class="mb-3">
                                    <label for="name" class="form-label">Estadia</label>
                                    <input type="text" class="form-control" id="productName" name="name" value="<%= name %>"/>
                                </div>

                                <div class="mb-3">
                                    <label for="Description" class="form-label">Descripci√≥n</label>
                                    <textarea class="form-control" id="Description" style="resize: none;"
                                        name="description" required><%= description %></textarea>
                                </div>

                                <div class="mb-3">
                                    <label for="productPrice" class="form-label">Precio</label>
                                    <input type="number" class="form-control" id="productPrice" name="price"
                                        min="0" step="0.01" value="<%= price %>" required>
                                </div>

                                <div class="mb-3">
                                    <label for="productDiscount" class="form-label">Descuento</label>
                                    <input type="number" class="form-control" id="productDiscount" name="discount"
                                        min="0" max="100" value="<%= discount %>" required>
                                </div>

                                <div class="d-flex justify-content-between mb-3">
                                    <button class="btn btn-dark" type="submit">Guardar cambios</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>


            <%- include('partials/footer') %>
    </body>

</html>