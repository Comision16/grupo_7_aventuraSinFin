<!DOCTYPE html>
<html lang="en">
    <!-- head -->
    <%- include('./partials/head',{
        title : 'Product Detail'
    }) %>
<body>
    <!-- header -->
    <%- include('./partials/header') %>
    <!-- cuerpo de pagina -->
    <main class="product__container">
        <div class="product__image">
            <img src="/images/<%= image || 'card1.png' %>" alt="">
        </div>
        <div class="product__details">
            <div class="product__title-rating">
                <h1 class="product__title"><%=  country %></h1>
                <div class="product__rating">
                    ★★★★<span class="product__star-gray">★</span> 
                </div>
            </div>
            <p class="product__description"><%= description %></p>
            <p class="product__additional-info">Habitaciones cuádruples / Varios tipos de camas.</p>
            <p class="product__additional-info product__price"><strong>U$S<%= price %></strong></p> 
 
<!-- Mostrar imágenes adicionales -->
<% if (additionalImages && additionalImages.length > 0) { %>
    <div class="product__additional-images">
        <h3>Imágenes adicionales</h3>
        <div class="additional-images-container">
            <% additionalImages.forEach(image => { %>
                <img src="/images/<%= image %>" alt="Imagen Adicional">
            <% }) %>
        </div>
    </div>
<% } %>

            <button class="product__button">RESERVAR</button>
        </div>
    </main>
    <!-- footer -->
    <%- include('partials/footer') %>
</body>
</html>